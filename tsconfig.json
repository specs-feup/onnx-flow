{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "outDir": "out/",
        "declaration": true,
        "strict": false,
        "allowJs": false,
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@specs-feup/onnx-flow/*": ["./src/*.ts", "./test/*.ts"]
        }
    },
    "exclude": ["node_modules", "out"]
}